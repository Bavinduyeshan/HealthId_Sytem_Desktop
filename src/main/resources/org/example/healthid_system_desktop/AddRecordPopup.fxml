<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0"
      spacing="20"
      style="-fx-background-color: #F5F7FA;
             -fx-padding: 25;
             -fx-background-radius: 12;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 4);
             -fx-border-color: #E0E4E8;
             -fx-border-radius: 12;
             -fx-border-width: 1;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.healthid_system_desktop.controller.AddRecordPopupController">
    <children>
        <Label text="Add New Medical Record"
               style="-fx-font-size: 20px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #2C3E50;
                      -fx-padding: 0 0 10 0;" />

        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints prefWidth="150" />
                <ColumnConstraints prefWidth="400" />
            </columnConstraints>

            <Label text="Patient ID:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495E;
                          -fx-font-weight: bold;" />
            <TextField fx:id="patientIdField"
                       editable="false"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="0"
                       style="-fx-background-color: #FFFFFF;
                             -fx-border-color: #DDE4ED;
                             -fx-border-radius: 6;
                             -fx-background-radius: 6;" />

            <Label text="Doctor ID:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="1"
                   style="-fx-text-fill: #34495E;
                          -fx-font-weight: bold;" />
            <TextField fx:id="doctorIdField"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="1"
                       style="-fx-background-color: #FFFFFF;
                             -fx-border-color: #DDE4ED;
                             -fx-border-radius: 6;
                             -fx-background-radius: 6;" />

            <Label text="Disease:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="2"
                   style="-fx-text-fill: #34495E;
                          -fx-font-weight: bold;" />
            <ComboBox fx:id="diseaseComboBox"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="2"
                      promptText="Select a disease"
                      style="-fx-background-color: #FFFFFF;
                            -fx-border-color: #DDE4ED;
                            -fx-border-radius: 6;
                            -fx-background-radius: 6;" />

            <Label text="Diagnostic Data:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="3"
                   style="-fx-text-fill: #34495E;
                          -fx-font-weight: bold;" />
            <TextArea fx:id="diagnosticDataArea"
                      prefRowCount="3"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="3"
                      style="-fx-background-color: #FFFFFF;
                            -fx-border-color: #DDE4ED;
                            -fx-border-radius: 6;
                            -fx-background-radius: 6;" />

            <Label text="Treatments:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="4"
                   style="-fx-text-fill: #34495E;
                          -fx-font-weight: bold;" />
            <TextArea fx:id="treatmentsArea"
                      prefRowCount="3"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="4"
                      style="-fx-background-color: #FFFFFF;
                            -fx-border-color: #DDE4ED;
                            -fx-border-radius: 6;
                            -fx-background-radius: 6;" />

            <Label text="Report URL:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="5"
                   style="-fx-text-fill: #34495E;
                          -fx-font-weight: bold;" />
            <TextField fx:id="reportUrlField"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="5"
                       style="-fx-background-color: #FFFFFF;
                             -fx-border-color: #DDE4ED;
                             -fx-border-radius: 6;
                             -fx-background-radius: 6;" />
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="15">
            <Button onAction="#cancel"
                    text="Cancel"
                    style="-fx-background-color: #E74C3C;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-padding: 8 20;
                           -fx-background-radius: 8;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);" />
            <Button onAction="#save"
                    text="Save"
                    style="-fx-background-color: #3498DB;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-padding: 8 20;
                           -fx-background-radius: 8;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);" />
        </HBox>
    </children>
</VBox>